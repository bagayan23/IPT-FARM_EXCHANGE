@model FarmExchange.Models.Profile

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="min-h-screen bg-gray-50 py-8 px-4">
    <div class="max-w-3xl mx-auto">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Edit Profile</h1>
            <p class="text-gray-600 mt-2">Update your personal information.</p>
        </div>

        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <form asp-action="Edit" method="post" class="p-6">
                <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <div>
                        <label asp-for="FirstName" class="block text-sm font-medium text-gray-700 mb-2">First Name</label>
                        <input asp-for="FirstName" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" required />
                        <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="LastName" class="block text-sm font-medium text-gray-700 mb-2">Last Name</label>
                        <input asp-for="LastName" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" required />
                        <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <div>
                        <label asp-for="MiddleName" class="block text-sm font-medium text-gray-700 mb-2">Middle Name</label>
                        <input asp-for="MiddleName" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" />
                    </div>
                    <div>
                        <label asp-for="ExtensionName" class="block text-sm font-medium text-gray-700 mb-2">Extension Name</label>
                        <input asp-for="ExtensionName" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" placeholder="Jr., Sr." />
                    </div>
                </div>

                <div class="mb-6">
                    <label asp-for="Phone" class="block text-sm font-medium text-gray-700 mb-2">Phone Number</label>
                    <input asp-for="Phone" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" />
                    <span asp-validation-for="Phone" class="text-red-500 text-sm"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="Bio" class="block text-sm font-medium text-gray-700 mb-2">Bio</label>
                    <textarea asp-for="Bio" rows="4" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" placeholder="Tell us about yourself..."></textarea>
                    <span asp-validation-for="Bio" class="text-red-500 text-sm"></span>
                </div>

                <!-- ADDRESS SECTION -->
                <div class="border-t pt-6 mt-6">
                    <h3 class="text-lg font-medium text-gray-900 mb-4">Address Information</h3>

                    @{
                        var address = Model.Addresses.FirstOrDefault();
                    }

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-4">
                         <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Unit Number</label>
                            <input name="UnitNumber" value="@address?.UnitNumber" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" placeholder="Unit 123, Block 1" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Street Name</label>
                            <input name="StreetName" value="@address?.StreetName" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" placeholder="Main St." />
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Region</label>
                            <select id="regionSelect" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500">
                                <option value="">Select Region</option>
                            </select>
                            <input type="hidden" name="Region" id="hiddenRegion" value="@address?.Region" />
                        </div>
                         <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Province</label>
                            <select id="provinceSelect" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" disabled>
                                <option value="">Select Province</option>
                            </select>
                            <input type="hidden" name="Province" id="hiddenProvince" value="@address?.Province" />
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">City/Municipality</label>
                            <select id="citySelect" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" disabled>
                                <option value="">Select City/Municipality</option>
                            </select>
                            <input type="hidden" name="City" id="hiddenCity" value="@address?.City" />
                        </div>
                         <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Barangay</label>
                            <select id="barangaySelect" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" disabled>
                                <option value="">Select Barangay</option>
                            </select>
                            <input type="hidden" name="Barangay" id="hiddenBarangay" value="@address?.Barangay" />
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Postal Code</label>
                            <input name="PostalCode" value="@address?.PostalCode" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" placeholder="1000" />
                        </div>
                    </div>
                </div>

                <div class="flex items-center justify-end space-x-4">
                    <a asp-controller="Profile" asp-action="Details" asp-route-id="@Model.Id" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50">Cancel</a>
                    <button type="submit" class="px-6 py-2 text-sm font-medium text-white bg-green-600 rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 shadow-md">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const regionSelect = document.getElementById('regionSelect');
            const provinceSelect = document.getElementById('provinceSelect');
            const citySelect = document.getElementById('citySelect');
            const barangaySelect = document.getElementById('barangaySelect');

            const hiddenRegion = document.getElementById('hiddenRegion');
            const hiddenProvince = document.getElementById('hiddenProvince');
            const hiddenCity = document.getElementById('hiddenCity');
            const hiddenBarangay = document.getElementById('hiddenBarangay');

            // API Base URL
            const API_BASE = 'https://psgc.gitlab.io/api';

            // Function to auto-select option based on hidden value
            function autoSelect(selectElement, hiddenValue) {
                if (!hiddenValue) return;
                // Match by text content because our hidden values are names, not codes
                for (let i = 0; i < selectElement.options.length; i++) {
                    // Try exact match or partial match (e.g. "Region I (Ilocos Region)" vs "Region I")
                    const optionText = selectElement.options[i].text;

                    // Simple logic: if option contains the hidden value, or hidden value contains option text (normalized)
                    // The hidden values are stored names (e.g. "Pangasinan"). The options are "Pangasinan".
                    // Region is trickier: "Region I" vs "Region I (Ilocos Region)".

                    if (optionText === hiddenValue || optionText.startsWith(hiddenValue + ' (') || hiddenValue.startsWith(optionText)) {
                        selectElement.selectedIndex = i;
                        // selectElement.value will be the Code
                        return selectElement.value;
                    }
                }
                return null;
            }

            // 1. Fetch Regions
            fetch(`${API_BASE}/regions/`)
                .then(response => response.json())
                .then(data => {
                    data.forEach(region => {
                        const option = document.createElement('option');
                        option.value = region.code;
                        option.textContent = region.name + (region.regionName ? ` (${region.regionName})` : '');
                        regionSelect.appendChild(option);
                    });

                    // Auto-select Region
                    const selectedCode = autoSelect(regionSelect, hiddenRegion.value);
                    if (selectedCode) {
                        // Trigger change manually to load provinces
                        loadProvinces(selectedCode, hiddenProvince.value, hiddenCity.value, hiddenBarangay.value);
                    }
                })
                .catch(error => console.error('Error fetching regions:', error));

            // Load Provinces Logic
            function loadProvinces(regionCode, savedProvince, savedCity, savedBarangay) {
                // Reset ALL dependent fields if not just loading
                if (!savedProvince) {
                    provinceSelect.innerHTML = '<option value="">Select Province</option>';
                    provinceSelect.disabled = true;
                    hiddenProvince.value = '';

                    citySelect.innerHTML = '<option value="">Select City/Municipality</option>';
                    citySelect.disabled = true;
                    hiddenCity.value = '';

                    barangaySelect.innerHTML = '<option value="">Select Barangay</option>';
                    barangaySelect.disabled = true;
                    hiddenBarangay.value = '';
                }

                if (regionCode) {
                    fetch(`${API_BASE}/regions/${regionCode}/provinces/`)
                        .then(response => response.json())
                        .then(data => {
                            provinceSelect.innerHTML = '<option value="">Select Province</option>'; // Clear old options
                            if (data.length > 0) {
                                provinceSelect.disabled = false;
                                data.sort((a, b) => a.name.localeCompare(b.name));
                                data.forEach(province => {
                                    const option = document.createElement('option');
                                    option.value = province.code;
                                    option.textContent = province.name;
                                    provinceSelect.appendChild(option);
                                });

                                const selectedCode = autoSelect(provinceSelect, savedProvince);
                                if (selectedCode) {
                                    loadCities(selectedCode, false, savedCity, savedBarangay);
                                }
                            } else {
                                // No Provinces (e.g., NCR), load cities directly from Region
                                fetchCities(regionCode, true, savedCity, savedBarangay);
                                hiddenProvince.value = hiddenRegion.value; // Consistency
                            }
                        })
                        .catch(error => console.error('Error fetching provinces:', error));
                }
            }

            // Load Cities Logic
            function loadCities(parentCode, isRegion, savedCity, savedBarangay) {
                 // Reset dependent fields if not just loading
                if (!savedCity) {
                    citySelect.innerHTML = '<option value="">Select City/Municipality</option>';
                    citySelect.disabled = true;
                    hiddenCity.value = '';

                    barangaySelect.innerHTML = '<option value="">Select Barangay</option>';
                    barangaySelect.disabled = true;
                    hiddenBarangay.value = '';
                }

                if (parentCode) {
                    fetchCities(parentCode, isRegion, savedCity, savedBarangay);
                }
            }

             // Helper function to fetch cities
            function fetchCities(code, isRegion, savedCity, savedBarangay) {
                citySelect.disabled = false;
                const endpoint = isRegion
                    ? `${API_BASE}/regions/${code}/cities-municipalities/`
                    : `${API_BASE}/provinces/${code}/cities-municipalities/`;

                fetch(endpoint)
                    .then(response => response.json())
                    .then(data => {
                        citySelect.innerHTML = '<option value="">Select City/Municipality</option>';
                        data.sort((a, b) => a.name.localeCompare(b.name));
                        data.forEach(city => {
                            const option = document.createElement('option');
                            option.value = city.code;
                            option.textContent = city.name;
                            citySelect.appendChild(option);
                        });

                        const selectedCode = autoSelect(citySelect, savedCity);
                        if (selectedCode) {
                            loadBarangays(selectedCode, savedBarangay);
                        }
                    })
                    .catch(error => console.error('Error fetching cities:', error));
            }

             // Load Barangays Logic
            function loadBarangays(cityCode, savedBarangay) {
                 if (!savedBarangay) {
                    barangaySelect.innerHTML = '<option value="">Select Barangay</option>';
                    barangaySelect.disabled = true;
                    hiddenBarangay.value = '';
                 }

                if (cityCode) {
                    barangaySelect.disabled = false;
                    fetch(`${API_BASE}/cities-municipalities/${cityCode}/barangays/`)
                        .then(response => response.json())
                        .then(data => {
                            barangaySelect.innerHTML = '<option value="">Select Barangay</option>';
                            data.sort((a, b) => a.name.localeCompare(b.name));
                            data.forEach(barangay => {
                                const option = document.createElement('option');
                                option.value = barangay.code;
                                option.textContent = barangay.name;
                                barangaySelect.appendChild(option);
                            });

                            autoSelect(barangaySelect, savedBarangay);
                        })
                        .catch(error => console.error('Error fetching barangays:', error));
                }
            }


            // EVENT LISTENERS (User Interaction)
            regionSelect.addEventListener('change', function() {
                const regionCode = this.value;
                const regionName = this.options[this.selectedIndex].text;
                hiddenRegion.value = regionCode ? regionName.split(' (')[0] : '';
                loadProvinces(regionCode, null, null, null); // Pass null to reset downstream
            });

            provinceSelect.addEventListener('change', function() {
                const provinceCode = this.value;
                const provinceName = this.options[this.selectedIndex].text;
                hiddenProvince.value = provinceCode ? provinceName : '';
                loadCities(provinceCode, false, null, null);
            });

            citySelect.addEventListener('change', function() {
                const cityCode = this.value;
                const cityName = this.options[this.selectedIndex].text;
                hiddenCity.value = cityCode ? cityName : '';
                loadBarangays(cityCode, null);
            });

            barangaySelect.addEventListener('change', function() {
                const barangayName = this.options[this.selectedIndex].text;
                hiddenBarangay.value = this.value ? barangayName : '';
            });
        });
    </script>
}