@model FarmExchange.Models.Profile

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="min-h-screen bg-gray-50 py-8 px-4">
    <div class="max-w-3xl mx-auto">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Edit Profile</h1>
            <p class="text-gray-600 mt-2">Update your personal information.</p>
        </div>

        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <form asp-action="Edit" method="post" class="p-6">
                <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <div>
                        <label asp-for="FirstName" class="block text-sm font-medium text-gray-700 mb-2">First Name</label>
                        <input asp-for="FirstName" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" required />
                        <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="LastName" class="block text-sm font-medium text-gray-700 mb-2">Last Name</label>
                        <input asp-for="LastName" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" required />
                        <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <div>
                        <label asp-for="MiddleName" class="block text-sm font-medium text-gray-700 mb-2">Middle Name</label>
                        <input asp-for="MiddleName" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" />
                    </div>
                    <div>
                        <label asp-for="ExtensionName" class="block text-sm font-medium text-gray-700 mb-2">Extension Name</label>
                        <input asp-for="ExtensionName" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" placeholder="Jr., Sr." />
                    </div>
                </div>

                <div class="mb-6">
                    <label asp-for="Phone" class="block text-sm font-medium text-gray-700 mb-2">Phone Number</label>
                    <input asp-for="Phone" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" />
                    <span asp-validation-for="Phone" class="text-red-500 text-sm"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="Bio" class="block text-sm font-medium text-gray-700 mb-2">Bio</label>
                    <textarea asp-for="Bio" rows="4" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" placeholder="Tell us about yourself..."></textarea>
                    <span asp-validation-for="Bio" class="text-red-500 text-sm"></span>
                </div>

                <div class="flex items-center justify-end space-x-4">
                    <a asp-controller="Profile" asp-action="Details" asp-route-id="@Model.Id" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50">Cancel</a>
                    <button type="submit" class="px-6 py-2 text-sm font-medium text-white bg-green-600 rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 shadow-md">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
