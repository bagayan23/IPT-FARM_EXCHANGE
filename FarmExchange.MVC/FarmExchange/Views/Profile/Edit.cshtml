@using FarmExchange.ViewModels
@model EditProfileViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="min-h-screen bg-gray-50 py-8 px-4">
    <div class="max-w-3xl mx-auto">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Edit Profile</h1>
            <p class="text-gray-600 mt-2">Update your personal information and address.</p>
        </div>

        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <form asp-action="Edit" method="post" class="p-6">
                <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

                <!-- Personal Info -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <div>
                        <label asp-for="FirstName" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="FirstName" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" required />
                        <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="LastName" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="LastName" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" required />
                        <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <div>
                        <label asp-for="MiddleName" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="MiddleName" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" />
                    </div>
                    <div>
                        <label asp-for="ExtensionName" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="ExtensionName" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" placeholder="Jr., Sr." />
                    </div>
                </div>

                <div class="mb-6">
                    <label asp-for="Phone" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <input asp-for="Phone" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" />
                    <span asp-validation-for="Phone" class="text-red-500 text-sm"></span>
                </div>

                <!-- Address Section -->
                <div class="border-t pt-6 mt-6">
                    <h2 class="text-lg font-semibold text-gray-900 mb-4">Address</h2>

                    <div class="bg-gray-50 p-4 rounded-md mb-4">
                        <p class="text-sm text-gray-600 mb-2 font-medium">Current Address:</p>
                        <p class="text-gray-800">
                            @if (!string.IsNullOrEmpty(Model.Province) || !string.IsNullOrEmpty(Model.Region))
                            {
                                var parts = new List<string?> { Model.UnitNumber, Model.StreetName, Model.Barangay, Model.City, Model.Province, Model.Region, Model.PostalCode };
                                @string.Join(", ", parts.Where(p => !string.IsNullOrEmpty(p)))
                            }
                            else
                            {
                                <span class="italic text-gray-500">No address on file.</span>
                            }
                        </p>
                    </div>

                    <div class="flex items-center mb-4">
                        <input asp-for="UpdateAddress" type="checkbox" id="toggleAddress" class="h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded">
                        <label for="toggleAddress" class="ml-2 block text-sm text-gray-900">
                            Update Address?
                        </label>
                    </div>

                    <div id="addressFields" class="hidden space-y-4">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label asp-for="UnitNumber" class="block text-sm font-medium text-gray-700 mb-1"></label>
                                <input asp-for="UnitNumber" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" placeholder="Unit 123, Block 1" />
                            </div>
                            <div>
                                <label asp-for="StreetName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                                <input asp-for="StreetName" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" placeholder="Main St." />
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Region</label>
                                <select id="regionSelect" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500">
                                    <option value="">Select Region</option>
                                </select>
                                <input type="hidden" asp-for="Region" id="hiddenRegion" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Province</label>
                                <select id="provinceSelect" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" disabled>
                                    <option value="">Select Province</option>
                                </select>
                                <input type="hidden" asp-for="Province" id="hiddenProvince" />
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">City/Municipality</label>
                                <select id="citySelect" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" disabled>
                                    <option value="">Select City/Municipality</option>
                                </select>
                                <input type="hidden" asp-for="City" id="hiddenCity" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Barangay</label>
                                <select id="barangaySelect" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" disabled>
                                    <option value="">Select Barangay</option>
                                </select>
                                <input type="hidden" asp-for="Barangay" id="hiddenBarangay" />
                            </div>
                        </div>

                        <div>
                            <label asp-for="PostalCode" class="block text-sm font-medium text-gray-700 mb-1"></label>
                            <input asp-for="PostalCode" class="w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500" placeholder="1000" />
                        </div>
                    </div>
                </div>

                <div class="flex items-center justify-end space-x-4 mt-6">
                    <a href="javascript:history.back()" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50">Cancel</a>
                    <button type="submit" class="px-6 py-2 text-sm font-medium text-white bg-green-600 rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 shadow-md">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const toggleAddress = document.getElementById('toggleAddress');
            const addressFields = document.getElementById('addressFields');

            toggleAddress.addEventListener('change', function() {
                if (this.checked) {
                    addressFields.classList.remove('hidden');
                } else {
                    addressFields.classList.add('hidden');
                }
            });

            // PSGC API Logic (Same as SignUp)
            const regionSelect = document.getElementById('regionSelect');
            const provinceSelect = document.getElementById('provinceSelect');
            const citySelect = document.getElementById('citySelect');
            const barangaySelect = document.getElementById('barangaySelect');

            const hiddenRegion = document.getElementById('hiddenRegion');
            const hiddenProvince = document.getElementById('hiddenProvince');
            const hiddenCity = document.getElementById('hiddenCity');
            const hiddenBarangay = document.getElementById('hiddenBarangay');

            const API_BASE = 'https://psgc.gitlab.io/api';

            // 1. Fetch Regions
            fetch(`${API_BASE}/regions/`)
                .then(response => response.json())
                .then(data => {
                    data.forEach(region => {
                        const option = document.createElement('option');
                        option.value = region.code;
                        option.textContent = region.name + (region.regionName ? ` (${region.regionName})` : '');
                        regionSelect.appendChild(option);
                    });
                })
                .catch(error => console.error('Error fetching regions:', error));

            // 2. On Region Change
            regionSelect.addEventListener('change', function() {
                const regionCode = this.value;
                const regionName = this.options[this.selectedIndex].text;

                hiddenRegion.value = regionCode ? regionName.split(' (')[0] : '';

                provinceSelect.innerHTML = '<option value="">Select Province</option>';
                provinceSelect.disabled = true;
                hiddenProvince.value = '';

                citySelect.innerHTML = '<option value="">Select City/Municipality</option>';
                citySelect.disabled = true;
                hiddenCity.value = '';

                barangaySelect.innerHTML = '<option value="">Select Barangay</option>';
                barangaySelect.disabled = true;
                hiddenBarangay.value = '';

                if (regionCode) {
                    fetch(`${API_BASE}/regions/${regionCode}/provinces/`)
                        .then(response => response.json())
                        .then(data => {
                            if (data.length > 0) {
                                provinceSelect.disabled = false;
                                data.sort((a, b) => a.name.localeCompare(b.name));
                                data.forEach(province => {
                                    const option = document.createElement('option');
                                    option.value = province.code;
                                    option.textContent = province.name;
                                    provinceSelect.appendChild(option);
                                });
                            } else {
                                // No provinces (e.g. NCR)
                                fetchCities(regionCode, true);
                                hiddenProvince.value = hiddenRegion.value;
                            }
                        });
                }
            });

            // 3. On Province Change
            provinceSelect.addEventListener('change', function() {
                const provinceCode = this.value;
                const provinceName = this.options[this.selectedIndex].text;
                hiddenProvince.value = provinceCode ? provinceName : '';

                citySelect.innerHTML = '<option value="">Select City/Municipality</option>';
                citySelect.disabled = true;
                hiddenCity.value = '';

                barangaySelect.innerHTML = '<option value="">Select Barangay</option>';
                barangaySelect.disabled = true;
                hiddenBarangay.value = '';

                if (provinceCode) {
                    fetchCities(provinceCode, false);
                }
            });

            function fetchCities(code, isRegion) {
                citySelect.disabled = false;
                const endpoint = isRegion
                    ? `${API_BASE}/regions/${code}/cities-municipalities/`
                    : `${API_BASE}/provinces/${code}/cities-municipalities/`;

                fetch(endpoint)
                    .then(response => response.json())
                    .then(data => {
                        data.sort((a, b) => a.name.localeCompare(b.name));
                        data.forEach(city => {
                            const option = document.createElement('option');
                            option.value = city.code;
                            option.textContent = city.name;
                            citySelect.appendChild(option);
                        });
                    });
            }

            // 4. On City Change
            citySelect.addEventListener('change', function() {
                const cityCode = this.value;
                const cityName = this.options[this.selectedIndex].text;
                hiddenCity.value = cityCode ? cityName : '';

                barangaySelect.innerHTML = '<option value="">Select Barangay</option>';
                barangaySelect.disabled = true;
                hiddenBarangay.value = '';

                if (cityCode) {
                    barangaySelect.disabled = false;
                    fetch(`${API_BASE}/cities-municipalities/${cityCode}/barangays/`)
                        .then(response => response.json())
                        .then(data => {
                            data.sort((a, b) => a.name.localeCompare(b.name));
                            data.forEach(barangay => {
                                const option = document.createElement('option');
                                option.value = barangay.code;
                                option.textContent = barangay.name;
                                barangaySelect.appendChild(option);
                            });
                        });
                }
            });

            // 5. On Barangay Change
            barangaySelect.addEventListener('change', function() {
                const barangayName = this.options[this.selectedIndex].text;
                hiddenBarangay.value = this.value ? barangayName : '';
            });
        });
    </script>
}