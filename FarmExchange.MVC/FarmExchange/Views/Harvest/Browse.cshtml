@model List<Harvest>
@{
    ViewData["Title"] = "Browse Harvests";
    var profile = ViewBag.Profile as Profile;
    var searchTerm = ViewBag.SearchTerm as string;
    var categoryFilter = ViewBag.CategoryFilter as string ?? "all";
}

<div class="min-h-screen bg-gray-50 py-8 px-4">
    <div class="max-w-7xl mx-auto">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Browse Harvests</h1>
            <p class="text-gray-600">
                Discover fresh, locally-grown produce from your community
            </p>
        </div>

        <form method="get" class="mb-6 grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="relative">
                <div id="searchIcon" class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </div>

                <input type="text"
                       id="searchInput"
                       name="searchTerm"
                       value="@searchTerm"
                       oninput="handleSearchInput()"
                       placeholder="Search harvests, farmers, or locations..."
                       class="w-full pl-10 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all" />
            </div>

            <div>
                <select name="category" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" onchange="this.form.submit()">
                    <option value="all" selected="@(categoryFilter == "all")">All Categories</option>
                    <option value="vegetables" selected="@(categoryFilter == "vegetables")">Vegetables</option>
                    <option value="fruits" selected="@(categoryFilter == "fruits")">Fruits</option>
                    <option value="herbs" selected="@(categoryFilter == "herbs")">Herbs</option>
                    <option value="grains" selected="@(categoryFilter == "grains")">Grains</option>
                    <option value="other" selected="@(categoryFilter == "other")">Other</option>
                </select>
            </div>
        </form>

        @if (!Model.Any())
        {
            <div class="bg-white rounded-lg shadow-md hover:shadow-lg p-12 text-center">
                <p class="text-gray-600 text-lg">
                    No harvests found. Try adjusting your filters.
                </p>
            </div>
        }
        else
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var harvest in Model)
                {
                    <div class="bg-white rounded-lg shadow-md hover:shadow-lg overflow-hidden flex flex-col">
                        @if (!string.IsNullOrEmpty(harvest.ImageUrl))
                        {
                            <img src="@harvest.ImageUrl" alt="@harvest.Title" class="w-full h-48 object-cover" />
                        }
                        else
                        {
                            <div class="w-full h-48 bg-gradient-to-br from-green-100 to-green-200 flex items-center justify-center">
                                <span class="text-4xl">🌱</span>
                            </div>
                        }
                        <div class="p-5 flex flex-col flex-1">
                            <div class="flex-1">
                                <div class="flex items-start justify-between mb-2">
                                    <h3 class="text-lg font-semibold text-gray-900">@harvest.Title</h3>
                                    <span class="inline-block px-2 py-1 text-xs bg-green-100 text-green-700 rounded-full">
                                        @harvest.Category
                                    </span>
                                </div>
                                <p class="text-gray-600 text-sm mb-3 line-clamp-2">
                                    @harvest.Description
                                </p>
                                <div class="text-sm text-gray-600 mb-3">
                                    <p class="font-medium">@harvest.User.FullName</p>
                                    @if (!string.IsNullOrEmpty(harvest.User.Location))
                                    {
                                        <p class="text-xs">@harvest.User.Location</p>
                                    }
                                </div>
                                <div class="flex items-center justify-between mb-4">
                                    <span class="text-xl font-bold text-green-600">
                                        $@harvest.Price.ToString("F2")/@harvest.Unit
                                    </span>
                                    <span class="text-sm text-gray-600">
                                        @harvest.QuantityAvailable @harvest.Unit left
                                    </span>
                                </div>
                            </div>
                            <div class="flex gap-2">
                                @if (profile?.UserType == UserType.Buyer)
                                {
                                    <button onclick="openPurchaseModal('@harvest.Id', '@harvest.Title', @harvest.Price, '@harvest.Unit', @harvest.QuantityAvailable)" class="flex-1 px-3 py-1.5 text-sm font-medium bg-green-600 hover:bg-green-700 text-white shadow-md hover:shadow-lg rounded-lg">
                                        <svg class="h-4 w-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                                        </svg>
                                        Buy
                                    </button>
                                }
                                <a asp-controller="Message" asp-action="Index" asp-route-recipientId="@harvest.UserId" asp-route-subject="Inquiry: @harvest.Title" class="flex-1 px-3 py-1.5 text-sm font-medium bg-transparent hover:bg-gray-50 text-gray-700 border-2 border-gray-300 rounded-lg text-center">
                                    <svg class="h-4 w-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                                    </svg>
                                    Message
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<div id="purchaseModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center p-4 z-50">
    <div class="bg-white rounded-lg shadow-md max-w-md w-full p-6">
        <h2 class="text-2xl font-bold text-gray-900 mb-4" id="modalTitle">Purchase</h2>
        <form asp-controller="Harvest" asp-action="Purchase" method="post">
            <input type="hidden" name="harvestId" id="harvestId" />
            <div class="space-y-4">
                <div>
                    <p class="text-gray-600 mb-2" id="modalPrice"></p>
                    <p class="text-gray-600 mb-2" id="modalAvailable"></p>
                </div>
                <div>
                    <label for="quantity" class="block text-sm font-medium text-gray-700 mb-1">Quantity</label>
                    <input type="number" step="0.01" min="0.01" name="quantity" id="quantity" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" required />
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                    <p class="text-lg font-semibold text-gray-900" id="modalTotal">Total: $0.00</p>
                </div>
                <div class="flex gap-3">
                    <button type="submit" class="flex-1 px-5 py-2.5 text-base font-medium bg-green-600 hover:bg-green-700 text-white shadow-md hover:shadow-lg rounded-lg">
                        Confirm Purchase
                    </button>
                    <button type="button" onclick="closePurchaseModal()" class="flex-1 px-5 py-2.5 text-base font-medium bg-transparent hover:bg-gray-50 text-gray-700 border-2 border-gray-300 rounded-lg">
                        Cancel
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // 1. Search Icon Toggle Logic
        function handleSearchInput() {
            const input = document.getElementById('searchInput');
            const icon = document.getElementById('searchIcon');

            if (input.value.length > 0) {
                // If text exists: Hide icon, remove left padding
                icon.classList.add('hidden');
                input.classList.remove('pl-10');
                input.classList.add('pl-4');
            } else {
                // If empty: Show icon, restore left padding
                icon.classList.remove('hidden');
                input.classList.add('pl-10');
                input.classList.remove('pl-4');
            }
        }

        // Run on page load (in case user searched and page reloaded with value)
        document.addEventListener("DOMContentLoaded", function() {
            handleSearchInput();
        });

        // 2. Existing Purchase Modal Logic
        let currentPrice = 0;
        function openPurchaseModal(id, title, price, unit, available) {
            currentPrice = price;
            document.getElementById('harvestId').value = id;
            document.getElementById('modalTitle').textContent = 'Purchase ' + title;
            document.getElementById('modalPrice').textContent = 'Price: $' + price.toFixed(2) + '/' + unit;
            document.getElementById('modalAvailable').textContent = 'Available: ' + available + ' ' + unit;
            document.getElementById('quantity').value = '1';
            document.getElementById('quantity').max = available;
            updateTotal();
            document.getElementById('purchaseModal').classList.remove('hidden');
            document.getElementById('purchaseModal').classList.add('flex');
        }
        function closePurchaseModal() {
            document.getElementById('purchaseModal').classList.add('hidden');
            document.getElementById('purchaseModal').classList.remove('flex');
        }
        function updateTotal() {
            const quantity = parseFloat(document.getElementById('quantity').value) || 0;
            const total = quantity * currentPrice;
            document.getElementById('modalTotal').textContent = 'Total: $' + total.toFixed(2);
        }
        document.getElementById('quantity').addEventListener('input', updateTotal);
    </script>
}