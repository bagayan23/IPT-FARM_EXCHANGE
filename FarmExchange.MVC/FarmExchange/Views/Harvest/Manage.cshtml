@model List<Harvest>
@{
    ViewData["Title"] = "Manage Harvests";
}

<div class="min-h-screen bg-gray-50 py-8 px-4">
    <div class="max-w-6xl mx-auto">
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Manage Harvests</h1>
                <p class="text-gray-600 mt-2">Create and manage your harvest listings</p>
            </div>
            <a asp-action="Create" class="px-5 py-2.5 text-base font-medium bg-green-600 hover:bg-green-700 text-white shadow-md hover:shadow-lg rounded-lg">
                <svg class="h-5 w-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Add Harvest
            </a>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-12">
                <p class="text-gray-600">No harvests yet. Create your first listing!</p>
            </div>
        }
        else
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var harvest in Model)
                {
                    <div class="bg-white rounded-lg shadow-md hover:shadow-lg overflow-hidden">
                        @if (!string.IsNullOrEmpty(harvest.ImageUrl))
                        {
                            <img src="@harvest.ImageUrl" alt="@harvest.Title" class="w-full h-48 object-cover" />
                        }
                        <div class="p-5">
                            <h3 class="text-lg font-semibold text-gray-900 mb-2">@harvest.Title</h3>
                            <p class="text-gray-600 text-sm mb-3 line-clamp-2">@harvest.Description</p>
                            <div class="flex items-center justify-between mb-3">
                                <span class="text-lg font-bold text-green-600">
                                    ₱@harvest.Price.ToString("F2")/@harvest.Unit
                                </span>
                                <span class="text-sm text-gray-600">
                                    @harvest.QuantityAvailable @harvest.Unit available
                                </span>
                            </div>
                            <div class="flex gap-2">
                                <a asp-action="Edit" asp-route-id="@harvest.Id" class="flex-1 px-3 py-1.5 text-sm font-medium bg-transparent hover:bg-gray-50 text-gray-700 border-2 border-gray-300 rounded-lg text-center">
                                    <svg class="h-4 w-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                    </svg>
                                    Edit
                                </a>
                                <form asp-action="Delete" asp-route-id="@harvest.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this harvest?');" class="flex-1">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="w-full px-3 py-1.5 text-sm font-medium bg-red-600 hover:bg-red-700 text-white shadow-md hover:shadow-lg rounded-lg">
                                        <svg class="h-4 w-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>