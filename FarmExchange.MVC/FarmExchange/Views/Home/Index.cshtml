@{
    ViewData["Title"] = "Home";
}

<div class="min-h-screen bg-white">
    <section class="bg-gradient-to-br from-green-50 via-white to-green-50 py-20 px-4" id="home">
        <div class="max-w-6xl mx-auto text-center">
            <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">
                Connect with Your Local
                <span class="text-green-600">Farmers & Gardeners</span>
            </h1>
            <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto leading-relaxed">
                FarmExchange brings fresh, locally-grown produce directly from your community's
                farmers and gardeners to your table. Support local agriculture while enjoying
                the freshest harvests available.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a asp-controller="Account" asp-action="SignUp" class="px-6 py-3 text-lg font-medium bg-green-600 hover:bg-green-700 text-white shadow-md hover:shadow-lg rounded-lg">Get Started</a>
                <a asp-controller="Harvest" asp-action="Browse" class="px-5 py-2.5 text-base font-medium bg-white hover:bg-gray-50 text-green-600 border-2 border-green-600 rounded-lg">Browse Harvests</a>
            </div>
        </div>
    </section>

    <section class="py-16 px-4 bg-white scroll-mt-16" id="about">
        <div class="max-w-6xl mx-auto">
            <h2 class="text-4xl font-bold text-center text-gray-900 mb-12">
                Why Choose FarmExchange?
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="bg-white rounded-lg shadow-md hover:shadow-lg p-8 text-center">
                    <div class="bg-green-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-3">Fresh & Local</h3>
                    <p class="text-gray-600 leading-relaxed">
                        Get access to the freshest produce from your local community. Support
                        sustainable agriculture and reduce your carbon footprint.
                    </p>
                </div>

                <div class="bg-white rounded-lg shadow-md hover:shadow-lg p-8 text-center">
                    <div class="bg-green-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-3">Community First</h3>
                    <p class="text-gray-600 leading-relaxed">
                        Build relationships with local farmers and gardeners. Know where your food
                        comes from and support your neighbors.
                    </p>
                </div>

                <div class="bg-white rounded-lg shadow-md hover:shadow-lg p-8 text-center">
                    <div class="bg-green-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-3">Easy to Use</h3>
                    <p class="text-gray-600 leading-relaxed">
                        Browse available harvests, connect with sellers, and arrange pickups all
                        through our simple platform.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <section class="py-16 px-4 bg-gray-50 scroll-mt-16" id="how-it-works">
        <div class="max-w-6xl mx-auto">
            <h2 class="text-4xl font-bold text-center text-gray-900 mb-12">
                How It Works
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
                <div class="text-center">
                    <div class="bg-green-600 text-white w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-4 text-xl font-bold">
                        1
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-3">Create Account</h3>
                    <p class="text-gray-600">
                        Sign up as a farmer to list your harvests or as a buyer to browse local
                        produce.
                    </p>
                </div>

                <div class="text-center">
                    <div class="bg-green-600 text-white w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-4 text-xl font-bold">
                        2
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-3">Connect</h3>
                    <p class="text-gray-600">
                        Browse available harvests and connect with local farmers and gardeners
                        through our messaging system.
                    </p>
                </div>

                <div class="text-center">
                    <div class="bg-green-600 text-white w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-4 text-xl font-bold">
                        3
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-3">Exchange</h3>
                    <p class="text-gray-600">
                        Complete transactions and arrange pickups. Support local agriculture and
                        enjoy fresh produce.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <section class="py-16 px-4 bg-white scroll-mt-16" id="contact">
        <div class="max-w-4xl mx-auto text-center">
            <svg class="h-16 w-16 text-green-600 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            <h2 class="text-4xl font-bold text-gray-900 mb-6">Get in Touch</h2>
            <p class="text-xl text-gray-600 mb-8">
                Have questions? We're here to help you connect with your local food community.
            </p>
            <div class="bg-gray-50 rounded-lg p-8">
                <p class="text-gray-700 mb-4">
                    <strong>Email:</strong> support@farmexchange.com
                </p>
                <p class="text-gray-700">
                    <strong>Phone:</strong> (555) 123-4567
                </p>
            </div>
        </div>
    </section>

    <section class="bg-green-600 text-white py-16 px-4">
        <div class="max-w-4xl mx-auto text-center">
            <h2 class="text-3xl font-bold mb-4">Ready to Start?</h2>
            <p class="text-xl mb-8 text-green-50">
                Join our community today and discover the freshest local produce.
            </p>
            <a asp-controller="Account" asp-action="SignUp" class="px-5 py-2.5 text-base font-medium bg-white hover:bg-gray-50 text-green-600 border-2 border-green-600 rounded-lg">Sign Up Now</a>
        </div>
    </section>
</div>