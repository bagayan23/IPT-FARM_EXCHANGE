@model Message
@{
    ViewData["Title"] = "Message Details";
    var profile = ViewBag.Profile as Profile;
}

<div class="min-h-screen bg-gray-50 py-8 px-4">
    <div class="max-w-4xl mx-auto">
        <div class="mb-6">
            <a asp-action="Index" class="text-green-600 hover:text-green-700 font-medium">← Back to Messages</a>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="border-b border-gray-200 pb-4 mb-4">
                <div class="flex items-start justify-between mb-2">
                    <h2 class="text-xl font-semibold text-gray-900">@Model.Subject</h2>
                    @if (Model.IsRead)
                    {
                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 19v-8.93a2 2 0 01.89-1.664l7-4.666a2 2 0 012.22 0l7 4.666A2 2 0 0121 10.07V19M3 19a2 2 0 002 2h14a2 2 0 002-2M3 19l6.75-4.5M21 19l-6.75-4.5M3 10l6.75 4.5M21 10l-6.75 4.5m0 0l-1.14.76a2 2 0 01-2.22 0l-1.14-.76" />
                        </svg>
                    }
                    else
                    {
                        <svg class="h-5 w-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                    }
                </div>
                <div class="flex items-center justify-between text-sm text-gray-600">
                    <span>
                        @if (Model.SenderId == profile?.Id)
                        {
                            <text>To: @Model.Recipient.FullName</text>
                        }
                        else
                        {
                            <text>From: @Model.Sender.FullName</text>
                        }
                    </span>
                    <span>@Model.CreatedAt.ToLocalTime().ToString("MM/dd/yyyy hh:mm tt")</span>
                </div>
            </div>
            <div class="prose max-w-none mb-4">
                <p class="text-gray-700 whitespace-pre-wrap">@Model.Content</p>
            </div>
            <div class="flex gap-3 pt-4 border-t border-gray-200">
                <button onclick="showReplyForm()" class="px-5 py-2.5 text-base font-medium bg-green-600 hover:bg-green-700 text-white shadow-md hover:shadow-lg rounded-lg">
                    <svg class="h-4 w-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6" />
                    </svg>
                    Reply
                </button>
                @if (Model.SenderId == profile?.Id)
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="px-5 py-2.5 text-base font-medium text-white shadow-md hover:shadow-lg rounded-lg" style="background-color: rgb(21, 128, 61);">
                        Edit
                    </a>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this message?');" class="inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="px-5 py-2.5 text-base font-medium bg-red-600 hover:bg-red-700 text-white shadow-md hover:shadow-lg rounded-lg">
                            Delete
                        </button>
                    </form>
                }
            </div>
        </div>

        <div id="replyForm" class="bg-white rounded-lg shadow-md p-6 mt-6 hidden">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
                Reply to @(Model.SenderId == profile?.Id ? Model.Recipient.FullName : Model.Sender.FullName)
            </h3>
            <form asp-controller="Message" asp-action="Send" method="post" class="space-y-4">
                @Html.AntiForgeryToken()
                <input type="hidden" name="recipientId" value="@(Model.SenderId == profile?.Id ? Model.RecipientId : Model.SenderId)" />
                <input type="hidden" name="subject" value="Re: @Model.Subject" />
                <div>
                    <label for="content" class="block text-sm font-medium text-gray-700 mb-1">Your Reply</label>
                    <textarea name="content" id="content" placeholder="Write your reply..." rows="6" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent resize-none" required></textarea>
                </div>
                <div class="flex gap-3">
                    <button type="submit" class="px-5 py-2.5 text-base font-medium bg-green-600 hover:bg-green-700 text-white shadow-md hover:shadow-lg rounded-lg">
                        <svg class="h-4 w-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                        </svg>
                        Send Reply
                    </button>
                    <button type="button" onclick="hideReplyForm()" class="px-5 py-2.5 text-base font-medium bg-transparent hover:bg-gray-50 text-gray-700 border-2 border-gray-300 rounded-lg">
                        Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showReplyForm() {
            document.getElementById('replyForm').classList.remove('hidden');
        }
        function hideReplyForm() {
            document.getElementById('replyForm').classList.add('hidden');
        }
    </script>
}