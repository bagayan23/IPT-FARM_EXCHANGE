@model FarmExchange.Models.Message

@{
    ViewData["Title"] = "Edit Message";
}

<div class="min-h-screen bg-gray-50 py-8 px-4">
    <div class="max-w-2xl mx-auto">
        <div class="mb-6">
            <a asp-action="Details" asp-route-id="@Model.Id" class="text-green-600 hover:text-green-700 font-medium">‚Üê Back to Message</a>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Edit Message</h2>

            <form asp-action="Edit" method="post" class="space-y-4">
                <input type="hidden" asp-for="Id" />
                <div>
                    <label asp-for="Subject" class="block text-sm font-medium text-gray-700 mb-1">Subject</label>
                    <input asp-for="Subject" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" required />
                </div>
                <div>
                    <label asp-for="Content" class="block text-sm font-medium text-gray-700 mb-1">Content</label>
                    <textarea asp-for="Content" rows="6" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent resize-none" required></textarea>
                </div>
                <div class="flex gap-3 pt-4">
                    <button type="submit" class="px-5 py-2.5 text-base font-medium text-white rounded-lg shadow-md hover:shadow-lg" style="background-color: rgb(21, 128, 61);">
                        Save Changes
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="px-5 py-2.5 text-base font-medium bg-transparent hover:bg-gray-50 text-gray-700 border-2 border-gray-300 rounded-lg">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
