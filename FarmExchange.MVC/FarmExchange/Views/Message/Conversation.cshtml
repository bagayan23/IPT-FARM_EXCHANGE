@section Scripts {
    <script>
        // Scroll to bottom of messages container
        document.addEventListener('DOMContentLoaded', function() {
            var container = document.getElementById('messagesContainer');
            container.scrollTop = container.scrollHeight;

            // Close dropdowns when clicking outside
            document.addEventListener('click', function(event) {
                if (!event.target.closest('.relative')) {
                    var dropdowns = document.querySelectorAll('.message-menu');
                    dropdowns.forEach(function(d) {
                        if (!d.classList.contains('hidden')) {
                            d.classList.add('hidden');
                        }
                    });
                }
            });
        });

        function toggleMessageMenu(id) {
            var menu = document.getElementById('menu-' + id);

            // Close other open menus
            var allMenus = document.querySelectorAll('.message-menu');
            allMenus.forEach(function(m) {
                if (m.id !== 'menu-' + id) {
                    m.classList.add('hidden');
                }
            });

            // Toggle current menu
            if (menu.classList.contains('hidden')) {
                menu.classList.remove('hidden');
            } else {
                menu.classList.add('hidden');
            }
        }

        function editMessage(id, content) {
            document.getElementById('editMessageId').value = id;
            document.getElementById('editMessageContent').value = content;
            document.getElementById('editMessageModal').classList.remove('hidden');
            document.getElementById('editMessageModal').classList.add('flex');
        }

        function closeEditModal() {
            document.getElementById('editMessageModal').classList.add('hidden');
            document.getElementById('editMessageModal').classList.remove('flex');
        }
    </script>
}