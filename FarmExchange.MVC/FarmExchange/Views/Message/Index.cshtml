@model List<Message>
@{
    ViewData["Title"] = "Messages";
    var profile = ViewBag.Profile as Profile;
    var allUsers = ViewBag.AllUsers as List<Profile> ?? new List<Profile>();
    var farmers = ViewBag.Farmers as List<Profile> ?? new List<Profile>();
}

<div class="min-h-screen bg-gray-50 py-8 px-4">
    <div class="max-w-7xl mx-auto">
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Messages</h1>
                <p class="text-gray-600 mt-2">Communicate with buyers and sellers</p>
            </div>
            <button onclick="openComposeModal()" class="px-5 py-2.5 text-base font-medium bg-green-600 hover:bg-green-700 text-white shadow-md hover:shadow-lg rounded-lg">
                <svg class="h-5 w-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                New Message
            </button>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <div class="lg:col-span-1">
                <div class="bg-white rounded-lg shadow-md p-4">
                    <h2 class="font-semibold text-gray-900 mb-4">All Messages</h2>
                    @if (!Model.Any())
                    {
                        <p class="text-gray-600 text-center py-8 text-sm">No messages yet</p>
                    }
                    else
                    {
                        <div class="space-y-2">
                            @foreach (var message in Model)
                            {
                                <a href="@Url.Action("Details", new { id = message.Id })" class="block p-3 rounded-lg cursor-pointer transition-colors bg-gray-50 hover:bg-gray-100">
                                    <div class="flex items-start justify-between mb-1">
                                        <span class="font-medium text-sm text-gray-900 truncate flex-1">
                                            @if (message.SenderId == profile?.Id)
                                            {
                                                <text>To: @message.Recipient.FullName</text>
                                            }
                                            else
                                            {
                                                @message.Sender.FullName
                                            }
                                        </span>
                                        @if (!message.IsRead && message.RecipientId == profile?.Id)
                                        {
                                            <svg class="h-4 w-4 text-green-600 flex-shrink-0 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                            </svg>
                                        }
                                    </div>
                                    <p class="text-xs text-gray-600 truncate">@message.Subject</p>
                                    <p class="text-xs text-gray-500 mt-1">@message.CreatedAt.ToLocalTime().ToString("MM/dd/yyyy")</p>
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>

            <div class="lg:col-span-2">
                <div class="bg-white rounded-lg shadow-md p-12 text-center">
                    <svg class="h-16 w-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                    </svg>
                    <p class="text-gray-600">
                        Select a message to view or compose a new one
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="composeModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center p-4 z-50">
    <div class="bg-white rounded-lg shadow-md max-w-2xl w-full p-6">
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-bold text-gray-900">New Message</h2>
            <button onclick="closeComposeModal()" class="text-gray-500 hover:text-gray-700">
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
        <form asp-action="Send" method="post" class="space-y-4">
            @Html.AntiForgeryToken()
            <div>
                <label for="recipientId" class="block text-sm font-medium text-gray-700 mb-1">Recipient</label>
                <select name="recipientId" id="recipientId" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" required>
                    <option value="">Select a user...</option>
                    @if (profile?.UserType == UserType.Buyer)
                    {
                        <optgroup label="Farmers">
                            @foreach (var farmer in farmers)
                            {
                                <option value="@farmer.Id">@farmer.FullName</option>
                            }
                        </optgroup>
                    }
                    else
                    {
                        <optgroup label="All Users">
                            @foreach (var user in allUsers)
                            {
                                <option value="@user.Id">@user.FullName</option>
                            }
                        </optgroup>
                    }
                </select>
            </div>
            <div>
                <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Subject</label>
                <input type="text" name="subject" id="subject" placeholder="Message subject" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" required />
            </div>
            <div>
                <label for="content" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
                <textarea name="content" id="content" placeholder="Write your message..." rows="6" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent resize-none" required></textarea>
            </div>
            <div class="flex gap-3">
                <button type="submit" class="flex-1 px-5 py-2.5 text-base font-medium bg-green-600 hover:bg-green-700 text-white shadow-md hover:shadow-lg rounded-lg">
                    <svg class="h-4 w-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                    </svg>
                    Send Message
                </button>
                <button type="button" onclick="closeComposeModal()" class="px-5 py-2.5 text-base font-medium bg-transparent hover:bg-gray-50 text-gray-700 border-2 border-gray-300 rounded-lg">
                    Cancel
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function openComposeModal() {
            document.getElementById('composeModal').classList.remove('hidden');
            document.getElementById('composeModal').classList.add('flex');
        }
        function closeComposeModal() {
            document.getElementById('composeModal').classList.add('hidden');
            document.getElementById('composeModal').classList.remove('flex');
        }
    </script>
}