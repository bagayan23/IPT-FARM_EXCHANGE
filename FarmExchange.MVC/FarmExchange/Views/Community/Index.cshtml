@model IEnumerable<FarmExchange.Models.ForumThread>

@{
    ViewData["Title"] = "Community Discussion";
    var currentCategory = ViewBag.CurrentCategory as string;
}

<div class="min-h-screen bg-gray-50 py-8 px-4">
    <div class="max-w-7xl mx-auto">
        <div class="flex flex-col md:flex-row md:items-center justify-between mb-8">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Community Discussion</h1>
                <p class="text-gray-600 mt-2">Connect, share knowledge, and grow together.</p>
            </div>
            <div class="mt-4 md:mt-0">
                <a asp-action="CreateThread" class="inline-flex items-center px-4 py-2 bg-green-600 border border-transparent rounded-md font-semibold text-xs text-white uppercase tracking-widest hover:bg-green-700 active:bg-green-900 focus:outline-none focus:border-green-900 focus:ring ring-green-300 disabled:opacity-25 transition ease-in-out duration-150 shadow-md">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Start New Discussion
                </a>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm p-4 mb-6">
            <div class="flex space-x-4 overflow-x-auto pb-2 md:pb-0">
                <a asp-action="Index" asp-route-category="All" class="px-4 py-2 rounded-full text-sm font-medium @(string.IsNullOrEmpty(currentCategory) || currentCategory == "All" ? "bg-green-100 text-green-800" : "bg-gray-100 text-gray-600 hover:bg-gray-200")">
                    All Topics
                </a>
                <a asp-action="Index" asp-route-category="Sustainable Farming" class="px-4 py-2 rounded-full text-sm font-medium @(currentCategory == "Sustainable Farming" ? "bg-green-100 text-green-800" : "bg-gray-100 text-gray-600 hover:bg-gray-200")">
                    Sustainable Farming
                </a>
                <a asp-action="Index" asp-route-category="Events" class="px-4 py-2 rounded-full text-sm font-medium @(currentCategory == "Events" ? "bg-green-100 text-green-800" : "bg-gray-100 text-gray-600 hover:bg-gray-200")">
                    Local Events
                </a>
                <a asp-action="Index" asp-route-category="Market Trends" class="px-4 py-2 rounded-full text-sm font-medium @(currentCategory == "Market Trends" ? "bg-green-100 text-green-800" : "bg-gray-100 text-gray-600 hover:bg-gray-200")">
                    Market Trends
                </a>
                <a asp-action="Index" asp-route-category="General" class="px-4 py-2 rounded-full text-sm font-medium @(currentCategory == "General" ? "bg-green-100 text-green-800" : "bg-gray-100 text-gray-600 hover:bg-gray-200")">
                    General
                </a>
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="bg-white rounded-lg shadow-md p-12 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">No discussions yet</h3>
                <p class="mt-1 text-sm text-gray-500">Be the first to start a conversation in this category.</p>
                <div class="mt-6">
                    <a asp-action="CreateThread" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                        Start New Discussion
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="space-y-4">
                @foreach (var thread in Model)
                {
                    <a asp-action="Thread" asp-route-id="@thread.Id" class="block bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200 overflow-hidden">
                        <div class="p-6">
                            <div class="flex items-center justify-between">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    @thread.Category
                                </span>
                                <span class="text-xs text-gray-500">@thread.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")</span>
                            </div>
                            <h3 class="mt-2 text-xl font-semibold text-gray-900">@thread.Title</h3>
                            <p class="mt-2 text-gray-600 line-clamp-2">@thread.Content</p>

                            <div class="mt-4 flex items-center justify-between border-t pt-4">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-8 w-8 rounded-full bg-green-200 flex items-center justify-center text-green-700 font-bold">
                                        @thread.Author.FirstName[0]@thread.Author.LastName[0]
                                    </div>
                                    <div class="ml-3">
                                        <p class="text-sm font-medium text-gray-900">@thread.Author.FullName</p>
                                    </div>
                                </div>
                                <div class="flex items-center text-sm text-gray-500">
                                    <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                                    </svg>
                                    @thread.Posts.Count replies
                                </div>
                            </div>
                        </div>
                    </a>
                }
            </div>
        }
    </div>
</div>
