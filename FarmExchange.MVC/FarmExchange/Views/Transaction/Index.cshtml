@model List<Transaction>
@{
    ViewData["Title"] = "Transactions";
    var profile = ViewBag.Profile as Profile;
    var filter = ViewBag.Filter as string ?? "all";
    var stats = ViewBag.Stats;
}

<div class="min-h-screen bg-gray-50 py-8 px-4">
    <div class="max-w-7xl mx-auto">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Transaction History</h1>
            <p class="text-gray-600 mt-2">
                @(profile?.UserType == UserType.Farmer ? "View and manage your sales" : "Track your purchases")
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm">Total Transactions</p>
                        <p class="text-3xl font-bold text-gray-900 mt-1">@stats.Total</p>
                    </div>
                    <svg class="h-10 w-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                    </svg>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm">Pending</p>
                        <p class="text-3xl font-bold text-gray-900 mt-1">@stats.Pending</p>
                    </div>
                    <svg class="h-10 w-10 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                    </svg>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm">Completed</p>
                        <p class="text-3xl font-bold text-gray-900 mt-1">@stats.Completed</p>
                    </div>
                    <svg class="h-10 w-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                    </svg>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm">
                            @(profile?.UserType == UserType.Farmer ? "Total Revenue" : "Total Spent")
                        </p>
                        <p class="text-3xl font-bold text-gray-900 mt-1">₱@(((decimal)stats.TotalRevenue).ToString("F2"))</p>
                    </div>
                    <svg class="h-10 w-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                    </svg>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="mb-6 flex items-center justify-between">
                <div class="flex gap-2">
                    <a asp-action="Index" asp-route-filter="all" class="px-3 py-1.5 text-sm font-medium @(filter == "all" ? "bg-green-600 hover:bg-green-700 text-white shadow-md hover:shadow-lg" : "bg-transparent hover:bg-gray-50 text-gray-700 border-2 border-gray-300") rounded-lg">
                        All
                    </a>
                    <a asp-action="Index" asp-route-filter="pending" class="px-3 py-1.5 text-sm font-medium @(filter == "pending" ? "bg-green-600 hover:bg-green-700 text-white shadow-md hover:shadow-lg" : "bg-transparent hover:bg-gray-50 text-gray-700 border-2 border-gray-300") rounded-lg">
                        Pending
                    </a>
                    <a asp-action="Index" asp-route-filter="completed" class="px-3 py-1.5 text-sm font-medium @(filter == "completed" ? "bg-green-600 hover:bg-green-700 text-white shadow-md hover:shadow-lg" : "bg-transparent hover:bg-gray-50 text-gray-700 border-2 border-gray-300") rounded-lg">
                        Completed
                    </a>
                    <a asp-action="Index" asp-route-filter="cancelled" class="px-3 py-1.5 text-sm font-medium @(filter == "cancelled" ? "bg-green-600 hover:bg-green-700 text-white shadow-md hover:shadow-lg" : "bg-transparent hover:bg-gray-50 text-gray-700 border-2 border-gray-300") rounded-lg">
                        Cancelled
                    </a>
                </div>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-12">
                    <svg class="h-16 w-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                    </svg>
                    <p class="text-gray-600">No transactions found</p>
                </div>
            }
            else
            {
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-gray-50 border-b border-gray-200">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-600 uppercase tracking-wider">Date</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-600 uppercase tracking-wider">Product</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-600 uppercase tracking-wider">
                                    @(profile?.UserType == UserType.Farmer ? "Buyer" : "Seller")
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-600 uppercase tracking-wider">Quantity</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-600 uppercase tracking-wider">Total</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-600 uppercase tracking-wider">Status</th>
                                @if (profile?.UserType == UserType.Farmer)
                                {
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-600 uppercase tracking-wider">Actions</th>
                                }
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var transaction in Model)
                            {
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        @transaction.TransactionDate.ToLocalTime().ToString("MM/dd/yyyy")
                                    </td>
                                    <td class="px-6 py-4 text-sm text-gray-900">
                                        @transaction.Harvest.Title
                                    </td>
                                    <td class="px-6 py-4 text-sm text-gray-900">
                                        @if (profile?.UserType == UserType.Farmer)
                                        {
                                            @transaction.Buyer.FullName
                                            if (!string.IsNullOrEmpty(transaction.Buyer.Phone))
                                            {
                                                <div class="text-xs text-gray-500">@transaction.Buyer.Phone</div>
                                            }
                                        }
                                        else
                                        {
                                            @transaction.Seller.FullName
                                            if (!string.IsNullOrEmpty(transaction.Seller.Phone))
                                            {
                                                <div class="text-xs text-gray-500">@transaction.Seller.Phone</div>
                                            }

                                            var ratings = ViewBag.SellerRatings as Dictionary<Guid, double>;
                                            if (ratings != null && ratings.ContainsKey(transaction.SellerId))
                                            {
                                                var avg = ratings[transaction.SellerId];
                                                <div class="flex items-center mt-1">
                                                    <div class="flex text-yellow-400 text-xs">
                                                        @for (int i = 1; i <= 5; i++)
                                                        {
                                                            <svg class="h-3 w-3 @(i <= Math.Round(avg) ? "fill-current" : "text-gray-300")" viewBox="0 0 20 20">
                                                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                                            </svg>
                                                        }
                                                    </div>
                                                    <span class="text-xs text-gray-500 ml-1">(@avg.ToString("F1"))</span>
                                                </div>
                                            }
                                        }
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        @transaction.Quantity @transaction.Harvest.Unit
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                        ₱@transaction.TotalPrice.ToString("F2")
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="inline-block px-3 py-1 text-xs rounded-full @(transaction.Status == "completed" ? "bg-green-100 text-green-700" : transaction.Status == "pending" ? "bg-yellow-100 text-yellow-700" : "bg-red-100 text-red-700")">
                                            @transaction.Status
                                        </span>
                                    </td>
                                    @if (profile?.UserType == UserType.Farmer)
                                    {
                                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                                            @if (transaction.Status == "pending")
                                            {
                                                <div class="flex gap-2">
                                                    <form asp-action="UpdateStatus" asp-route-id="@transaction.Id" asp-route-status="completed" method="post" class="inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="text-green-600 hover:text-green-800 font-medium">
                                                            Complete
                                                        </button>
                                                    </form>
                                                    <form asp-action="UpdateStatus" asp-route-id="@transaction.Id" asp-route-status="cancelled" method="post" class="inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="text-red-600 hover:text-red-800 font-medium">
                                                            Cancel
                                                        </button>
                                                    </form>
                                                </div>
                                            }
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
