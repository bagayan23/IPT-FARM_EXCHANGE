@{
    ViewData["Title"] = "Dashboard";
    var profile = ViewBag.Profile as Profile;
    var harvests = ViewBag.Harvests as List<Harvest> ?? new List<Harvest>();
    var sales = ViewBag.Sales as List<Transaction> ?? new List<Transaction>();
    var purchases = ViewBag.Purchases as List<Transaction> ?? new List<Transaction>();
    var unreadMessages = (int)(ViewBag.UnreadMessages ?? 0);
}

<div class="min-h-screen bg-gray-50 py-8 px-4">
    <div class="max-w-7xl mx-auto">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">
                Welcome back @profile?.FullName!
            </h1>
            <p class="text-gray-600 mt-2">
                @if (profile?.UserType == UserType.Farmer)
                {
                    <text>Manage your harvests and track your sales</text>
                }
                else
                {
                    <text>Browse harvests and track your purchases</text>
                }
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-white rounded-lg shadow-md hover:shadow-lg p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm">
                            @(profile?.UserType == UserType.Farmer ? "Active Listings" : "Total Purchases")
                        </p>
                        <p class="text-3xl font-bold text-gray-900 mt-1">
                            @(profile?.UserType == UserType.Farmer ? harvests.Count : purchases.Count)
                        </p>
                    </div>
                    <svg class="h-12 w-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                    </svg>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md hover:shadow-lg p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm">Unread Messages</p>
                        <p class="text-3xl font-bold text-gray-900 mt-1">@unreadMessages</p>
                    </div>
                    <svg class="h-12 w-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                    </svg>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md hover:shadow-lg p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm">
                            @(profile?.UserType == UserType.Farmer ? "Total Sales" : "Transactions")
                        </p>
                        <p class="text-3xl font-bold text-gray-900 mt-1">
                            @(profile?.UserType == UserType.Farmer ? sales.Count : purchases.Count)
                        </p>
                    </div>
                    <svg class="h-12 w-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                    </svg>
                </div>
            </div>
        </div>

        @if (profile?.UserType == UserType.Farmer)
        {
            <div class="bg-white rounded-lg shadow-md hover:shadow-lg p-6 mb-8">
                <div class="flex flex-col md:flex-row md:items-center justify-between mb-4">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4 md:mb-0">Sales Analytics</h2>

                    <div class="flex flex-col md:flex-row gap-4">
                         <select id="analyticsPeriod" class="border-gray-300 focus:border-green-500 focus:ring-green-500 rounded-md shadow-sm text-sm">
                            <option value="hour">Last Hour</option>
                            <option value="day">Last 24 Hours</option>
                            <option value="week">Last 7 Days</option>
                            <option value="month" selected>Last 30 Days</option>
                            <option value="year">Last Year</option>
                            <option value="custom">Custom Range</option>
                        </select>

                        <div id="customDateRange" class="hidden flex flex-col md:flex-row gap-2">
                             <input type="date" id="startDate" class="border-gray-300 focus:border-green-500 focus:ring-green-500 rounded-md shadow-sm text-sm" />
                             <input type="date" id="endDate" class="border-gray-300 focus:border-green-500 focus:ring-green-500 rounded-md shadow-sm text-sm" />
                             <button id="applyCustomDate" class="px-3 py-1.5 text-sm font-medium bg-green-600 hover:bg-green-700 text-white shadow-md rounded-lg">
                                Apply
                            </button>
                        </div>
                    </div>
                </div>

                <div class="w-full h-80">
                    <canvas id="salesChart"></canvas>
                </div>
            </div>
        }

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            @if (profile?.UserType == UserType.Farmer)
            {
                <div class="bg-white rounded-lg shadow-md hover:shadow-lg p-6">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-xl font-semibold text-gray-900">Your Harvests</h2>
                        <a asp-controller="Harvest" asp-action="Manage" class="px-3 py-1.5 text-sm font-medium bg-green-600 hover:bg-green-700 text-white shadow-md hover:shadow-lg rounded-lg">
                            Add New
                        </a>
                    </div>
                    @if (!harvests.Any())
                    {
                        <p class="text-gray-600 text-center py-8">
                            No harvests yet. Create your first listing!
                        </p>
                    }
                    else
                    {
                        <div class="space-y-3">
                            @foreach (var harvest in harvests)
                            {
                                <div class="bg-gray-50 rounded-lg p-4">
                                    <h3 class="font-medium text-gray-900">@harvest.Title</h3>
                                    <p class="text-sm text-gray-600">
                                        $@harvest.Price.ToString("F2")/@harvest.Unit • @harvest.QuantityAvailable @harvest.Unit available
                                    </p>
                                    <span class="inline-block px-2 py-1 text-xs rounded-full mt-1 @(harvest.Status == "available" ? "bg-green-100 text-green-700" : "bg-gray-100 text-gray-700")">
                                        @harvest.Status
                                    </span>
                                </div>
                            }
                        </div>
                    }
                </div>
            }

            <div class="bg-white rounded-lg shadow-md hover:shadow-lg p-6">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-xl font-semibold text-gray-900">
                        Recent @(profile?.UserType == UserType.Farmer ? "Sales" : "Purchases")
                    </h2>
                    <a asp-controller="Transaction" asp-action="Index" class="px-3 py-1.5 text-sm font-medium bg-transparent hover:bg-gray-50 text-gray-700 border-2 border-gray-300 rounded-lg">
                        View All
                    </a>
                </div>
                @{
                    var transactions = profile?.UserType == UserType.Farmer ? sales : purchases;
                }
                @if (!transactions.Any())
                {
                    <p class="text-gray-600 text-center py-8">No transactions yet.</p>
                }
                else
                {
                    <div class="space-y-3">
                        @foreach (var transaction in transactions)
                        {
                            <div class="bg-gray-50 rounded-lg p-4">
                                <h3 class="font-medium text-gray-900">@transaction.Harvest.Title</h3>
                                <p class="text-sm text-gray-600">
                                    @transaction.Quantity @transaction.Harvest.Unit • $@transaction.TotalPrice.ToString("F2")
                                </p>
                                <p class="text-xs text-gray-500 mt-1">
                                    @transaction.TransactionDate.ToLocalTime().ToString("MM/dd/yyyy")
                                </p>
                            </div>
                        }
                    </div>
                }
            </div>

            @if (profile?.UserType == UserType.Buyer)
            {
                <div class="bg-white rounded-lg shadow-md hover:shadow-lg p-6">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-xl font-semibold text-gray-900">Quick Actions</h2>
                    </div>
                    <div class="space-y-3">
                        <a asp-controller="Harvest" asp-action="Browse" class="w-full flex items-center px-5 py-2.5 text-base font-medium bg-transparent hover:bg-gray-50 text-gray-700 border-2 border-gray-300 rounded-lg">
                            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                            </svg>
                            Browse Harvests
                        </a>
                        <a asp-controller="Message" asp-action="Index" class="w-full flex items-center px-5 py-2.5 text-base font-medium bg-transparent hover:bg-gray-50 text-gray-700 border-2 border-gray-300 rounded-lg">
                            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                            </svg>
                            View Messages
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const periodSelect = document.getElementById('analyticsPeriod');
            const customDateRange = document.getElementById('customDateRange');
            const startDateInput = document.getElementById('startDate');
            const endDateInput = document.getElementById('endDate');
            const applyCustomBtn = document.getElementById('applyCustomDate');
            let salesChart = null;

            if (!periodSelect) return; // Not a farmer or element missing

            function fetchAndRenderChart() {
                const period = periodSelect.value;
                let url = `/Dashboard/GetSalesAnalytics?period=${period}`;

                if (period === 'custom') {
                    const start = startDateInput.value;
                    const end = endDateInput.value;
                    if (start) url += `&startDate=${start}`;
                    if (end) url += `&endDate=${end}`;
                }

                fetch(url)
                    .then(response => response.json())
                    .then(data => {
                        const ctx = document.getElementById('salesChart').getContext('2d');

                        // Prepare data
                        const labels = data.map(item => item.itemName);
                        const salesData = data.map(item => item.totalSales);
                        const quantityData = data.map(item => item.totalQuantity);

                        if (salesChart) {
                            salesChart.destroy();
                        }

                        salesChart = new Chart(ctx, {
                            type: 'bar',
                            data: {
                                labels: labels,
                                datasets: [{
                                    label: 'Total Sales ($)',
                                    data: salesData,
                                    backgroundColor: 'rgba(22, 163, 74, 0.6)', // green-600
                                    borderColor: 'rgba(22, 163, 74, 1)',
                                    borderWidth: 1
                                },
                                {
                                    label: 'Quantity Sold',
                                    data: quantityData,
                                    backgroundColor: 'rgba(59, 130, 246, 0.6)', // blue-500
                                    borderColor: 'rgba(59, 130, 246, 1)',
                                    borderWidth: 1,
                                    hidden: true // Hide by default, user can toggle
                                }]
                            },
                            options: {
                                responsive: true,
                                maintainAspectRatio: false,
                                scales: {
                                    y: {
                                        beginAtZero: true
                                    }
                                },
                                plugins: {
                                    legend: {
                                        position: 'top',
                                    },
                                    title: {
                                        display: true,
                                        text: 'Sales by Item'
                                    }
                                }
                            }
                        });
                    })
                    .catch(error => console.error('Error fetching analytics:', error));
            }

            // Initial load
            fetchAndRenderChart();

            // Event Listeners
            periodSelect.addEventListener('change', function () {
                if (this.value === 'custom') {
                    customDateRange.classList.remove('hidden');
                } else {
                    customDateRange.classList.add('hidden');
                    fetchAndRenderChart();
                }
            });

            applyCustomBtn.addEventListener('click', fetchAndRenderChart);
        });
    </script>
}