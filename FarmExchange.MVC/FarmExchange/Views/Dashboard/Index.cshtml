@{
    ViewData["Title"] = "Dashboard";
    var profile = ViewBag.Profile as Profile;
    var harvests = ViewBag.Harvests as List<Harvest> ?? new List<Harvest>();
    var sales = ViewBag.Sales as List<Transaction> ?? new List<Transaction>();
    var purchases = ViewBag.Purchases as List<Transaction> ?? new List<Transaction>();
    var unreadMessages = (int)(ViewBag.UnreadMessages ?? 0);
}

<div class="min-h-screen bg-gray-50 py-8 px-4">
    <div class="max-w-7xl mx-auto">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">
                Welcome back @profile?.FullName!
            </h1>
            <p class="text-gray-600 mt-2">
                @if (profile?.UserType == UserType.Farmer)
                {
                    <text>Manage your harvests and track your sales</text>
                }
                else
                {
                    <text>Browse harvests and track your purchases</text>
                }
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-white rounded-lg shadow-md hover:shadow-lg p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm">
                            @(profile?.UserType == UserType.Farmer ? "Active Listings" : "Total Purchases")
                        </p>
                        <p class="text-3xl font-bold text-gray-900 mt-1">
                            @(profile?.UserType == UserType.Farmer ? harvests.Count : purchases.Count)
                        </p>
                    </div>
                    <svg class="h-12 w-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                    </svg>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md hover:shadow-lg p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm">Unread Messages</p>
                        <p class="text-3xl font-bold text-gray-900 mt-1">@unreadMessages</p>
                    </div>
                    <svg class="h-12 w-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                    </svg>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md hover:shadow-lg p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm">
                            @(profile?.UserType == UserType.Farmer ? "Total Sales" : "Transactions")
                        </p>
                        <p class="text-3xl font-bold text-gray-900 mt-1">
                            @(profile?.UserType == UserType.Farmer ? sales.Count : purchases.Count)
                        </p>
                    </div>
                    <svg class="h-12 w-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                    </svg>
                </div>
            </div>
        </div>

        @if (profile?.UserType == UserType.Farmer)
        {
            <div class="bg-white rounded-lg shadow-md hover:shadow-lg p-6 mb-8">
                <div class="flex flex-col md:flex-row md:items-center justify-between mb-4">
                    <div class="flex flex-col">
                        <h2 class="text-xl font-semibold text-gray-900">Sales Analytics</h2>
                        <div id="totalRevenueContainer" class="text-sm text-gray-600 mt-1">
                            Total Revenue: <span id="totalRevenueValue" class="font-bold text-green-600">₱0.00</span>
                        </div>
                    </div>

                    <div class="flex flex-col md:flex-row gap-4 mt-4 md:mt-0">
                         <select id="analyticsPeriod" class="border-gray-300 focus:border-green-500 focus:ring-green-500 rounded-md shadow-sm text-sm">
                            <option value="hour">Last Hour</option>
                            <option value="day">Last 24 Hours</option>
                            <option value="week">Last 7 Days</option>
                            <option value="month" selected>Last 30 Days</option>
                            <option value="year">Last Year</option>
                            <option value="custom">Custom Range</option>
                        </select>

                        <div id="customDateRange" class="hidden flex flex-col md:flex-row gap-2">
                             <input type="date" id="startDate" class="border-gray-300 focus:border-green-500 focus:ring-green-500 rounded-md shadow-sm text-sm" />
                             <input type="date" id="endDate" class="border-gray-300 focus:border-green-500 focus:ring-green-500 rounded-md shadow-sm text-sm" />
                             <button id="applyCustomDate" class="px-3 py-1.5 text-sm font-medium bg-green-600 hover:bg-green-700 text-white shadow-md rounded-lg">
                                Apply
                            </button>
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    <div class="bg-gray-50 rounded-lg p-4">
                        <h3 class="text-lg font-medium text-gray-900 mb-4 text-center">My Sales Revenue (₱)</h3>
                        <div class="w-full h-64">
                            <canvas id="salesChart"></canvas>
                        </div>
                    </div>
                    <div class="bg-gray-50 rounded-lg p-4">
                        <h3 class="text-lg font-medium text-gray-900 mb-4 text-center">Market: Demand vs Supply</h3>
                        <div class="w-full h-64">
                            <canvas id="marketChart"></canvas>
                        </div>
                        <p class="text-xs text-gray-500 text-center mt-2">
                            Demand (Sold in selected period) vs Supply (Currently Available)
                        </p>
                    </div>
                </div>
            </div>
        }

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            @if (profile?.UserType == UserType.Farmer)
            {
                <div class="bg-white rounded-lg shadow-md hover:shadow-lg p-6">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-xl font-semibold text-gray-900">Your Harvests</h2>
                        <a asp-controller="Harvest" asp-action="Manage" class="px-3 py-1.5 text-sm font-medium bg-green-600 hover:bg-green-700 text-white shadow-md hover:shadow-lg rounded-lg">
                            Add New
                        </a>
                    </div>
                    @if (!harvests.Any())
                    {
                        <p class="text-gray-600 text-center py-8">
                            No harvests yet. Create your first listing!
                        </p>
                    }
                    else
                    {
                        <div class="space-y-3">
                            @foreach (var harvest in harvests)
                            {
                                <div class="bg-gray-50 rounded-lg p-4">
                                    <h3 class="font-medium text-gray-900">@harvest.Title</h3>
                                    <p class="text-sm text-gray-600">
                                        ₱@harvest.Price.ToString("F2")/@harvest.Unit • @harvest.QuantityAvailable @harvest.Unit available
                                    </p>
                                    <span class="inline-block px-2 py-1 text-xs rounded-full mt-1 @(harvest.Status == "available" ? "bg-green-100 text-green-700" : "bg-gray-100 text-gray-700")">
                                        @harvest.Status
                                    </span>
                                </div>
                            }
                        </div>
                    }
                </div>
            }

            <div class="bg-white rounded-lg shadow-md hover:shadow-lg p-6">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-xl font-semibold text-gray-900">
                        Recent @(profile?.UserType == UserType.Farmer ? "Sales" : "Purchases")
                    </h2>
                    <a asp-controller="Transaction" asp-action="Index" class="px-3 py-1.5 text-sm font-medium bg-transparent hover:bg-gray-50 text-gray-700 border-2 border-gray-300 rounded-lg">
                        View All
                    </a>
                </div>
                @{
                    var transactions = profile?.UserType == UserType.Farmer ? sales : purchases;
                }
                @if (!transactions.Any())
                {
                    <p class="text-gray-600 text-center py-8">No transactions yet.</p>
                }
                else
                {
                    <div class="space-y-3">
                        @foreach (var transaction in transactions)
                        {
                            <div class="bg-gray-50 rounded-lg p-4">
                                <h3 class="font-medium text-gray-900">@transaction.Harvest.Title</h3>
                                <p class="text-sm text-gray-600">
                                    @transaction.Quantity @transaction.Harvest.Unit • ₱@transaction.TotalPrice.ToString("F2")
                                </p>
                                <div class="flex items-center justify-between mt-1">
                                    <p class="text-xs text-gray-500">
                                        @transaction.TransactionDate.ToLocalTime().ToString("MM/dd/yyyy")
                                    </p>
                                    @if (profile?.UserType == UserType.Buyer && transaction.Status == "completed")
                                    {
                                        <button onclick="openReviewModal('@transaction.Id')" class="text-xs text-green-600 hover:text-green-800 font-medium">
                                            Rate Seller
                                        </button>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>

            @if (profile?.UserType == UserType.Buyer)
            {
                <div class="bg-white rounded-lg shadow-md hover:shadow-lg p-6">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-xl font-semibold text-gray-900">Quick Actions</h2>
                    </div>
                    <div class="space-y-3">
                        <a asp-controller="Harvest" asp-action="Browse" class="w-full flex items-center px-5 py-2.5 text-base font-medium bg-transparent hover:bg-gray-50 text-gray-700 border-2 border-gray-300 rounded-lg">
                            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                            </svg>
                            Browse Harvests
                        </a>
                        <a asp-controller="Message" asp-action="Index" class="w-full flex items-center px-5 py-2.5 text-base font-medium bg-transparent hover:bg-gray-50 text-gray-700 border-2 border-gray-300 rounded-lg">
                            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                            </svg>
                            View Messages
                        </a>
                        <a asp-controller="Community" asp-action="Index" class="w-full flex items-center px-5 py-2.5 text-base font-medium bg-transparent hover:bg-gray-50 text-gray-700 border-2 border-gray-300 rounded-lg">
                            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                            </svg>
                            Community Discussions
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Review Modal -->
<div id="reviewModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full" style="z-index: 100;">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
        <div class="mt-3 text-center">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Rate Seller</h3>
            <form id="reviewForm" asp-controller="Transaction" asp-action="LeaveReview" method="post" class="mt-2 text-left">
                <input type="hidden" id="reviewTransactionId" name="transactionId" />

                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2">Rating</label>
                    <div class="flex justify-center flex-row-reverse space-x-reverse space-x-2">
                        @for(int i=5; i>=1; i--) {
                            <label class="cursor-pointer">
                                <input type="radio" name="rating" value="@i" class="hidden peer" required>
                                <svg class="w-8 h-8 text-gray-300 peer-checked:text-yellow-400 peer-hover:text-yellow-400 hover:text-yellow-400 transition-colors duration-200" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                </svg>
                            </label>
                        }
                    </div>
                </div>
                <style>
                    /* Highlight all following stars when a star is checked or hovered */
                    .flex-row-reverse input:checked ~ label svg,
                    .flex-row-reverse label:hover ~ label svg {
                        color: #fbbf24; /* yellow-400 */
                    }
                </style>

                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2">Comment</label>
                    <textarea name="comment" rows="3" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required></textarea>
                </div>

                <div class="items-center px-4 py-3">
                    <button type="submit" class="px-4 py-2 bg-green-600 text-white text-base font-medium rounded-md w-full shadow-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-300">
                        Submit Review
                    </button>
                    <button type="button" onclick="closeReviewModal()" class="mt-3 px-4 py-2 bg-gray-100 text-gray-700 text-base font-medium rounded-md w-full shadow-sm hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-300">
                        Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        function openReviewModal(transactionId) {
            document.getElementById('reviewTransactionId').value = transactionId;
            document.getElementById('reviewModal').classList.remove('hidden');
        }

        function closeReviewModal() {
            document.getElementById('reviewModal').classList.add('hidden');
        }

        document.addEventListener('DOMContentLoaded', function () {
            const periodSelect = document.getElementById('analyticsPeriod');
            const customDateRange = document.getElementById('customDateRange');
            const startDateInput = document.getElementById('startDate');
            const endDateInput = document.getElementById('endDate');
            const applyCustomBtn = document.getElementById('applyCustomDate');
            let salesChart = null;
            let marketChart = null;

            if (!periodSelect) return; // Not a farmer or element missing

            function fetchAndRenderChart() {
                const period = periodSelect.value;
                let url = `/Dashboard/GetSalesAnalytics?period=${period}`;

                if (period === 'custom') {
                    const start = startDateInput.value;
                    const end = endDateInput.value;
                    if (start) url += `&startDate=${start}`;
                    if (end) url += `&endDate=${end}`;
                }

                fetch(url)
                    .then(response => response.json())
                    .then(data => {
                        updateTotalRevenue(data.personal);
                        renderSalesChart(data.personal);
                        renderMarketChart(data.market);
                    })
                    .catch(error => console.error('Error fetching analytics:', error));
            }

            function updateTotalRevenue(data) {
                const total = data.reduce((sum, item) => sum + item.totalSales, 0);
                document.getElementById('totalRevenueValue').textContent = '₱' + total.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
            }

            // Helper to generate distinct colors
            function generateColors(count) {
                const colors = [];
                for (let i = 0; i < count; i++) {
                    const hue = (i * 137.508) % 360; // Use Golden Angle for distribution
                    colors.push(`hsla(${hue}, 70%, 60%, 0.7)`);
                }
                return colors;
            }

            function generateBorderColors(count) {
                const colors = [];
                for (let i = 0; i < count; i++) {
                    const hue = (i * 137.508) % 360;
                    colors.push(`hsla(${hue}, 70%, 40%, 1)`);
                }
                return colors;
            }

            function renderSalesChart(data) {
                const ctx = document.getElementById('salesChart').getContext('2d');
                const labels = data.map(item => item.itemName);
                const salesData = data.map(item => item.totalSales);

                const backgroundColors = generateColors(data.length);
                const borderColors = generateBorderColors(data.length);

                if (salesChart) salesChart.destroy();

                salesChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Revenue (₱)',
                            data: salesData,
                            backgroundColor: backgroundColors,
                            borderColor: borderColors,
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                title: { display: true, text: 'Revenue (₱)' }
                            }
                        },
                        plugins: {
                            legend: { display: false },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        return '₱' + context.parsed.y.toFixed(2);
                                    }
                                }
                            }
                        }
                    }
                });
            }

            function renderMarketChart(data) {
                const ctx = document.getElementById('marketChart').getContext('2d');
                const labels = data.map(item => item.itemName);
                const demandData = data.map(item => item.demand);
                const supplyData = data.map(item => item.supply);

                if (marketChart) marketChart.destroy();

                marketChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: [
                            {
                                label: 'Demand (Sold)',
                                data: demandData,
                                backgroundColor: 'rgba(239, 68, 68, 0.7)', // red-500
                                borderColor: 'rgba(239, 68, 68, 1)',
                                borderWidth: 1
                            },
                            {
                                label: 'Supply (Available)',
                                data: supplyData,
                                backgroundColor: 'rgba(34, 197, 94, 0.7)', // green-500
                                borderColor: 'rgba(34, 197, 94, 1)',
                                borderWidth: 1
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        interaction: {
                            mode: 'index',
                            intersect: false,
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                title: { display: true, text: 'Quantity (Units)' }
                            }
                        },
                        plugins: {
                            legend: { position: 'top' }
                        }
                    }
                });
            }

            // Initial load
            fetchAndRenderChart();

            // Event Listeners
            periodSelect.addEventListener('change', function () {
                if (this.value === 'custom') {
                    customDateRange.classList.remove('hidden');
                } else {
                    customDateRange.classList.add('hidden');
                    fetchAndRenderChart();
                }
            });

            applyCustomBtn.addEventListener('click', fetchAndRenderChart);
        });
    </script>
}