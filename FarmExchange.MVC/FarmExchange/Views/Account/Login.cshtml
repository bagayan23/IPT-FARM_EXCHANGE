@using FarmExchange.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="min-h-screen bg-gradient-to-br from-green-50 to-white flex items-center justify-center px-4 py-12">
    <div class="max-w-md w-full bg-white rounded-xl shadow-lg p-8">
        <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-gray-900">Welcome Back</h2>
            <p class="mt-2 text-gray-600">Sign in to your FarmExchange account</p>
        </div>

        <form asp-action="Login" method="post" class="space-y-6">
            
            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg"></div>
            }
            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" placeholder="you@example.com" />
                <span asp-validation-for="Email" class="text-sm text-red-500"></span>
            </div>

            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-sm text-red-500"></span>
            </div>

            <button type="submit" class="w-full px-5 py-2.5 text-base font-medium bg-green-600 hover:bg-green-700 text-white shadow-md hover:shadow-lg rounded-lg">
                Sign In
            </button>
        </form>

        <div class="mt-6 text-center">
            <p class="text-gray-600">
                Don't have an account?
                <a asp-action="SignUp" class="text-green-600 hover:text-green-700 font-medium">Sign up</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}