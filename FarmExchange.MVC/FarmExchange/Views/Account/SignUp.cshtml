@using FarmExchange.ViewModels
@model SignUpViewModel
@{
    ViewData["Title"] = "Sign Up";
}

<div class="min-h-screen bg-gradient-to-br from-green-50 to-white flex items-center justify-center px-4 py-12">
    <div class="max-w-2xl w-full bg-white rounded-xl shadow-lg p-8">
        <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-gray-900">Join FarmExchange</h2>
            <p class="mt-2 text-gray-600">Create your account to get started</p>
        </div>

        <form asp-action="SignUp" method="post" class="space-y-6">
            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg"></div>
            }

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="LastName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="LastName" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" placeholder="Doe" />
                    <span asp-validation-for="LastName" class="text-sm text-red-500"></span>
                </div>
                <div>
                    <label asp-for="FirstName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="FirstName" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" placeholder="John" />
                    <span asp-validation-for="FirstName" class="text-sm text-red-500"></span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="MiddleName" class="block text-sm font-medium text-gray-700 mb-1">Middle Name (Optional)</label>
                    <input asp-for="MiddleName" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" />
                </div>
                <div>
                    <label asp-for="ExtensionName" class="block text-sm font-medium text-gray-700 mb-1">Extension (Optional)</label>
                    <input asp-for="ExtensionName" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" placeholder="Jr., Sr., III" />
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" placeholder="you@example.com" />
                    <span asp-validation-for="Email" class="text-sm text-red-500"></span>
                </div>
                <div>
                    <label asp-for="Phone" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Phone" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" placeholder="(555) 123-4567" />
                    <span asp-validation-for="Phone" class="text-sm text-red-500"></span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" />
                    <span asp-validation-for="Password" class="text-sm text-red-500"></span>
                </div>
                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="ConfirmPassword" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" />
                    <span asp-validation-for="ConfirmPassword" class="text-sm text-red-500"></span>
                </div>
            </div>

            <div>
                <label asp-for="UserType" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <select asp-for="UserType" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
                    <option value="Buyer">Buyer</option>
                    <option value="Farmer">Farmer/Gardener</option>
                </select>
            </div>

            <!-- ADDRESS SECTION -->
            <div class="border-t pt-4 mt-4">
                <h3 class="text-lg font-medium text-gray-900 mb-4">Address Information</h3>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-4">
                     <div>
                        <label asp-for="UnitNumber" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="UnitNumber" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" placeholder="Unit 123, Block 1" />
                        <span asp-validation-for="UnitNumber" class="text-sm text-red-500"></span>
                    </div>
                    <div>
                        <label asp-for="StreetName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="StreetName" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" placeholder="Main St." />
                        <span asp-validation-for="StreetName" class="text-sm text-red-500"></span>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-4">
                    <div>
                        <label asp-for="Region" class="block text-sm font-medium text-gray-700 mb-1">Region</label>
                        <select id="regionSelect" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
                            <option value="">Select Region</option>
                        </select>
                        <input type="hidden" asp-for="Region" id="hiddenRegion" />
                        <span asp-validation-for="Region" class="text-sm text-red-500"></span>
                    </div>
                     <div>
                        <label asp-for="Province" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <select id="provinceSelect" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" disabled>
                            <option value="">Select Province</option>
                        </select>
                        <input type="hidden" asp-for="Province" id="hiddenProvince" />
                        <span asp-validation-for="Province" class="text-sm text-red-500"></span>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-4">
                    <div>
                        <label asp-for="City" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <select id="citySelect" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" disabled>
                            <option value="">Select City/Municipality</option>
                        </select>
                        <input type="hidden" asp-for="City" id="hiddenCity" />
                        <span asp-validation-for="City" class="text-sm text-red-500"></span>
                    </div>
                     <div>
                        <label asp-for="Barangay" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <select id="barangaySelect" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" disabled>
                            <option value="">Select Barangay</option>
                        </select>
                        <input type="hidden" asp-for="Barangay" id="hiddenBarangay" />
                        <span asp-validation-for="Barangay" class="text-sm text-red-500"></span>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="PostalCode" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="PostalCode" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" placeholder="1000" />
                        <span asp-validation-for="PostalCode" class="text-sm text-red-500"></span>
                    </div>
                </div>
            </div>

            <button type="submit" class="w-full px-5 py-2.5 text-base font-medium bg-green-600 hover:bg-green-700 text-white shadow-md hover:shadow-lg rounded-lg">
                Sign Up
            </button>
        </form>

        <div class="mt-6 text-center">
            <p class="text-gray-600">
                Already have an account?
                <a asp-action="Login" class="text-green-600 hover:text-green-700 font-medium">Sign in</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const regionSelect = document.getElementById('regionSelect');
            const provinceSelect = document.getElementById('provinceSelect');
            const citySelect = document.getElementById('citySelect');
            const barangaySelect = document.getElementById('barangaySelect');

            const hiddenRegion = document.getElementById('hiddenRegion');
            const hiddenProvince = document.getElementById('hiddenProvince');
            const hiddenCity = document.getElementById('hiddenCity');
            const hiddenBarangay = document.getElementById('hiddenBarangay');

            // API Base URL
            const API_BASE = 'https://psgc.gitlab.io/api';

            // 1. Fetch Regions
            fetch(`${API_BASE}/regions/`)
                .then(response => response.json())
                .then(data => {
                    // Sort regions by name or code if preferred.
                    // PSGC usually returns them in a standard order, but sorting by name is safer for UX.
                    // However, regions like "Region I", "Region II" sort weirdly alphabetically.
                    // Let's rely on default order or sort by name.
                    // data.sort((a, b) => a.name.localeCompare(b.name));
                    data.forEach(region => {
                        const option = document.createElement('option');
                        option.value = region.code;
                        option.textContent = region.name + (region.regionName ? ` (${region.regionName})` : '');
                        regionSelect.appendChild(option);
                    });
                })
                .catch(error => console.error('Error fetching regions:', error));

            // 2. On Region Change
            regionSelect.addEventListener('change', function() {
                const regionCode = this.value;
                const regionName = this.options[this.selectedIndex].text;

                hiddenRegion.value = regionCode ? regionName.split(' (')[0] : ''; // Simple cleanup

                // Reset ALL dependent fields
                provinceSelect.innerHTML = '<option value="">Select Province</option>';
                provinceSelect.disabled = true;
                hiddenProvince.value = '';

                citySelect.innerHTML = '<option value="">Select City/Municipality</option>';
                citySelect.disabled = true;
                hiddenCity.value = '';

                barangaySelect.innerHTML = '<option value="">Select Barangay</option>';
                barangaySelect.disabled = true;
                hiddenBarangay.value = '';

                if (regionCode) {
                    // Fetch Provinces for the Region
                    fetch(`${API_BASE}/regions/${regionCode}/provinces/`)
                        .then(response => response.json())
                        .then(data => {
                            if (data.length > 0) {
                                // Has Provinces
                                provinceSelect.disabled = false;
                                data.sort((a, b) => a.name.localeCompare(b.name));
                                data.forEach(province => {
                                    const option = document.createElement('option');
                                    option.value = province.code;
                                    option.textContent = province.name;
                                    provinceSelect.appendChild(option);
                                });
                            } else {
                                // No Provinces (e.g., NCR)
                                // Enable City Select immediately and fetch cities from Region
                                fetchCities(regionCode, true);

                                // Set Province to "N/A" or the Region Name for data consistency
                                // Use Region Name to satisfy [Required] or expectation
                                hiddenProvince.value = hiddenRegion.value;
                            }
                        })
                        .catch(error => console.error('Error fetching provinces:', error));
                }
            });

            // 3. On Province Change
            provinceSelect.addEventListener('change', function() {
                const provinceCode = this.value;
                const provinceName = this.options[this.selectedIndex].text;

                hiddenProvince.value = provinceCode ? provinceName : '';

                // Reset Cities and Barangays
                citySelect.innerHTML = '<option value="">Select City/Municipality</option>';
                citySelect.disabled = true;
                hiddenCity.value = '';

                barangaySelect.innerHTML = '<option value="">Select Barangay</option>';
                barangaySelect.disabled = true;
                hiddenBarangay.value = '';

                if (provinceCode) {
                    fetchCities(provinceCode, false);
                }
            });

            // Helper function to fetch cities
            function fetchCities(code, isRegion) {
                citySelect.disabled = false;
                const endpoint = isRegion
                    ? `${API_BASE}/regions/${code}/cities-municipalities/`
                    : `${API_BASE}/provinces/${code}/cities-municipalities/`;

                fetch(endpoint)
                    .then(response => response.json())
                    .then(data => {
                        data.sort((a, b) => a.name.localeCompare(b.name));
                        data.forEach(city => {
                            const option = document.createElement('option');
                            option.value = city.code;
                            option.textContent = city.name;
                            citySelect.appendChild(option);
                        });
                    })
                    .catch(error => console.error('Error fetching cities:', error));
            }

            // 4. On City Change
            citySelect.addEventListener('change', function() {
                const cityCode = this.value;
                const cityName = this.options[this.selectedIndex].text;

                hiddenCity.value = cityCode ? cityName : '';

                // Reset Barangays
                barangaySelect.innerHTML = '<option value="">Select Barangay</option>';
                barangaySelect.disabled = true;
                hiddenBarangay.value = '';

                if (cityCode) {
                    barangaySelect.disabled = false;
                    fetch(`${API_BASE}/cities-municipalities/${cityCode}/barangays/`)
                        .then(response => response.json())
                        .then(data => {
                            data.sort((a, b) => a.name.localeCompare(b.name));
                            data.forEach(barangay => {
                                const option = document.createElement('option');
                                option.value = barangay.code;
                                option.textContent = barangay.name;
                                barangaySelect.appendChild(option);
                            });
                        })
                        .catch(error => console.error('Error fetching barangays:', error));
                }
            });

            // 5. On Barangay Change
            barangaySelect.addEventListener('change', function() {
                const barangayName = this.options[this.selectedIndex].text;
                hiddenBarangay.value = this.value ? barangayName : '';
            });
        });
    </script>
}