@using FarmExchange.ViewModels
@model SignUpViewModel
@{
    ViewData["Title"] = "Sign Up";
}

<div class="min-h-screen bg-gradient-to-br from-green-50 to-white flex items-center justify-center px-4 py-12">
    <div class="max-w-2xl w-full bg-white rounded-xl shadow-lg p-8">
        <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-gray-900">Join FarmExchange</h2>
            <p class="mt-2 text-gray-600">Create your account to get started</p>
        </div>

        <form asp-action="SignUp" method="post" class="space-y-6">
            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg"></div>
            }

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="LastName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="LastName" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" placeholder="Doe" />
                    <span asp-validation-for="LastName" class="text-sm text-red-500"></span>
                </div>
                <div>
                    <label asp-for="FirstName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="FirstName" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" placeholder="John" />
                    <span asp-validation-for="FirstName" class="text-sm text-red-500"></span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="MiddleName" class="block text-sm font-medium text-gray-700 mb-1">Middle Name (Optional)</label>
                    <input asp-for="MiddleName" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" />
                </div>
                <div>
                    <label asp-for="ExtensionName" class="block text-sm font-medium text-gray-700 mb-1">Extension (Optional)</label>
                    <input asp-for="ExtensionName" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" placeholder="Jr., Sr., III" />
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" placeholder="you@example.com" />
                    <span asp-validation-for="Email" class="text-sm text-red-500"></span>
                </div>
                <div>
                    <label asp-for="Phone" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Phone" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" placeholder="(555) 123-4567" />
                    <span asp-validation-for="Phone" class="text-sm text-red-500"></span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" />
                    <span asp-validation-for="Password" class="text-sm text-red-500"></span>
                </div>
                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="ConfirmPassword" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" />
                    <span asp-validation-for="ConfirmPassword" class="text-sm text-red-500"></span>
                </div>
            </div>

            <div>
                <label asp-for="UserType" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <select asp-for="UserType" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
                    <option value="Buyer">Buyer</option>
                    <option value="Farmer">Farmer/Gardener</option>
                </select>
            </div>

            <div>
                <label asp-for="Location" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Location" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" placeholder="City, State" />
            </div>

            <button type="submit" class="w-full px-5 py-2.5 text-base font-medium bg-green-600 hover:bg-green-700 text-white shadow-md hover:shadow-lg rounded-lg">
                Sign Up
            </button>
        </form>

        <div class="mt-6 text-center">
            <p class="text-gray-600">
                Already have an account?
                <a asp-action="Login" class="text-green-600 hover:text-green-700 font-medium">Sign in</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}